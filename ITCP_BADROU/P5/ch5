#include <stdio.h>
#include <math.h>

int main() {
    int n :
	float x1, y1,x , distance;
    int T[n;2]
	printf("give me the number of points  ");
    scanf("%d",&n) ;
    i=0;
    for(i=0;i<n;i++){      
	scanf("%f", &x1);
	scanf("%f", &y1);
    T[i;1]=x1 ;
    T[i;2]=y1 ;
    }
    i=1 ; 
	distance = sqrt((T[i;1]-T[i+1;1])*(T[i;1]-T[i+1;1])+((T[i;2]-T[i+1;2])*(T[i;2]-T[i+1;2])));
	x= distance ;
    i=0 ; 
    for(i=0;i<n;i++){
         distance = sqrt((T[i;1]-T[i+1;1])*(T[i;1]-T[i+1;1])+((T[i;2]-T[i+1;2])*(T[i;2]-T[i+1;2])));
         if(x>distance){
            x=distance ;
            else
            x= x ;

         }
printf("the smallest distance is %f\n" x );
         
         }

    
   

	return 0;
}